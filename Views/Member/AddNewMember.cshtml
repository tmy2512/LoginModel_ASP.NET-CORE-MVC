

@model HomeWork.Models.ViewModels.MemberViewModel 

<h1>Add Member</h1>

<form method="post" asp-action="AddNewMember">
    <div class = "mt-3">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" asp-for="MemberName" />
</div>
<div class = "mt-3">
    <label class="form-label">Email</label>
    <input type="text" class="form-control" asp-for="Email" />
</div>
<div class = "mt-3">
    <label class="form-label">Phone</label>
    <input type="text" class="form-control" asp-for="Phone" />
</div>
<div class = "mt-3">
    <label class="form-label">Gender: </label>
     <label class="form-label">
            <input type="radio" name="gender" value="male"  asp-for="Gender">
            Male
        </label>
        <label class="form-label">
            <input type="radio" name="gender" value="female" asp-for="Gender">
            Female
        </label>
</div>
<div class = "mt-3">
    <label class="form-label">Password</label>
    <input type="text" class="form-control" asp-for="MemberPassword"/>
</div>
<div class = "mt-3">
    <label class="form-label">Year of birth</label>
    <input type="text" class="form-control" asp-for="YearOfBirth" />
</div>
<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>